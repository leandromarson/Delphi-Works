unit U_cliente;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, Vcl.Mask,
  Data.DB, Vcl.Grids, Vcl.DBGrids, Vcl.DBCtrls;

type
  Tfrm_cad_cliente = class(TForm)
    Label1: TLabel;
    p_dados: TPanel;
    Panel1: TPanel;
    DBGrid1: TDBGrid;
    DataSource1: TDataSource;
    lbl_id: TLabel;
    DB_id: TDBEdit;
    lbl_nome: TLabel;
    DB_nome: TDBEdit;
    lbl_cpf: TLabel;
    DB_cpf: TDBEdit;
    lbl_celular: TLabel;
    DB_celular: TDBEdit;
    btn_limpar: TButton;
    btn_add: TButton;
    btn_editar: TButton;
    btn_deletar: TButton;
    btn_pesquisar: TButton;
    procedure btn_limparClick(Sender: TObject);
    procedure btn_addClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frm_cad_cliente: Tfrm_cad_cliente;

implementation

{$R *.dfm}

uses U_database;

procedure Tfrm_cad_cliente.btn_addClick(Sender: TObject);
begin
  //DataModule1.FDQuery1.SQL.Clear;
  DataModule1.FDQuery1.SQL.Add('Insert into CLIENTES');
  DataModule1.FDQuery1.SQL.Add('(id, nome, cpf, celular)');
  DataModule1.FDQuery1.SQL.Add('values (:pId, :pNome, :pCpf, :pCelular)');
  DataModule1.FDQuery1.ParamByName('pId').AsInteger := StrToInt(DB_id.Text);
  DataModule1.FDQuery1.ParamByName('pNome').AsString := DB_nome.Text;
  DataModule1.FDQuery1.ParamByName('pCpf').AsString := DB_cpf.Text;
  DataModule1.FDQuery1.ParamByName('pCelular').AsString := DB_celular.Text;
  DataModule1.FDQuery1.ExecSQL;
end;

procedure Tfrm_cad_cliente.btn_limparClick(Sender: TObject);
begin
  DataModule1.FDQuery1.SQL.Clear;
end;

end.
